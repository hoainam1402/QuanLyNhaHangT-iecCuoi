@model NhaHangTiecCuoi.MonAn

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3>Bạn có thật sự muốn xóa món ăn này không ?</h3>
<div>
    <hr />
    <img src="~/Content/photo/@Html.DisplayFor(model => model.Img)" width="350" />
    <dl class="dl-horizontal">
        <dt>
            Tên Món Ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenMon)
        </dd>

        <dt>
            Giá Món Ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt>
            Loại Món Ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiMon.TenLoai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa Món Ăn" class="btn btn-success" /> |
            <a href="http://localhost:50458/Admin/MonAns" class="btn btn-danger">Hủy</a>
        </div>
    }
</div>
