@model NhaHangTiecCuoi.DatSanh

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Đặt Tiệc Mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DatSanh</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Khách Hàng
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Số Điện Thoại
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDTKhach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDTKhach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ngày Đặt
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Mã Sảnh
            <div class="col-md-10">
                @Html.DropDownList("MaSanh", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaSanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Ngày Thanh Toán
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayThanhToan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Mã Thực Đơn
            <div class="col-md-10">
                @Html.DropDownList("MaTD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Mã Dịch Vụ
            <div class="col-md-10">
                @Html.DropDownList("MaDV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Buổi Tổ Chức Tiệc
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />|
                <a href="http://localhost:50458/Admin/DatSanhs" class="btn btn-danger">Hủy</a>
            </div>
        </div>
    </div>
}