@model NhaHangTiecCuoi.DongThucDon

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DongThucDon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Món Ăn
            <div class="col-md-10">
                @Html.DropDownList("MaMA", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaMA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Mã Thực Đơn
            <div class="col-md-10">
                @Html.DropDownList("MaTD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số Lượng 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />|
                <a href="http://localhost:50458/Admin/DongThucDons" class=" btn btn-danger">Hủy</a>
            </div>
        </div>
    </div>
}