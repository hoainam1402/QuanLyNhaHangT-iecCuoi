@model IEnumerable<NhaHangTiecCuoi.DatSanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Đặt Tiệc</h2>

<p>
    <a href="http://localhost:50458/Admin/DatSanhs/Create" class="btn btn-success">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên Khách Hàng
        </th>
        <th>
           Số Điện Thoại
        </th>
        <th>
            Ngày Đặt Tiệc
        </th>
        <th>
            Ngày Thanh Toán
        </th>
        <th>
            Buổi Tổ Chức Tiệc
        </th>
        <th>
            Tên Dịch Vụ
        </th>
        <th>
            Tên Sảnh
        </th>
        <th>
            Số Lượng Thực Đơn
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDTKhach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayThanhToan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DichVu.TenDV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sanh.TenSanh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thuc_Don.SoLuong)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.MaDatSanh }) |
            @Html.ActionLink("Thông Tin", "Details", new { id=item.MaDatSanh }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaDatSanh })
        </td>
    </tr>
}

</table>
