    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thông Tin Đặt Tiệc</h2>

<div>
    <h4>DatSanh</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Khách Hàng 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKhachHang)
        </dd>

        <dt>
            Số Điện Thoại Khách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDTKhach)
        </dd>

        <dt>
